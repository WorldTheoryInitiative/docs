{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Purity Router",
  "colors": {
    "primary": "#AC34C2",
    "light": "#EF56F5",
    "dark": "#621580"
  },
  "favicon": "/favicon.svg",
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "python", "javascript", "go"],
      "defaults": "required"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Getting Started",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "index",
              "quickstart"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Categories",
            "openapi": "openapi.json",
            "pages": [
              "GET /categories-v1"
            ]
          },
          {
            "group": "Events",
            "openapi": "openapi.json",
            "pages": [
              "GET /events-v1",
              "GET /events-v1/{event_id}"
            ]
          },
          {
            "group": "Markets",
            "openapi": "openapi.json",
            "pages": [
              "GET /markets-v1",
              "GET /markets-v1/{market_id}"
            ]
          },
          {
            "group": "Platforms",
            "openapi": "openapi.json",
            "pages": [
              "GET /platforms-v1"
            ]
          },
          {
            "group": "Price History",
            "openapi": "openapi.json",
            "pages": [
              "GET /price-history-v1"
            ]
          },
          {
            "group": "Series",
            "openapi": "openapi.json",
            "pages": [
              "GET /series-v1",
              "GET /series-v1/{series_id}"
            ]
          },
          {
            "group": "Trending",
            "openapi": "openapi.json",
            "pages": [
              "GET /trending-v1"
            ]
          },
          {
            "group": "Sync",
            "openapi": "openapi.json",
            "pages": [
              "POST /sync-runner"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "API Status",
          "href": "https://status.purity.com",
          "icon": "chart-line"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/purity",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://purity.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/light.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@purity.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://purity.com/api-keys"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/purity_api",
      "github": "https://github.com/purity-api",
      "linkedin": "https://linkedin.com/company/purity-api"
    }
  }
}
